@{
    Layout = null;
    var title = ViewData["Title"] as string;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title</title>

    <!-- Bootstrap CSS -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- DataTables CSS -->
    <link href="~/lib/datatables/jquery.dataTables.min.css" rel="stylesheet" />

    <!-- Font Awesome Icons -->
    <link href="~/lib/fontawesome/css/all.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <!-- <link href="~/css/custom.css" rel="stylesheet" /> -->
</head>
<body>
    <div class="d-flex flex-column min-vh-100">

        <nav class="navbar navbar-expand-lg p-0 bg-body-secondary">
            <div class="container d-flex">
                <div class="d-flex align-items-center">
                    <a class="navbar-brand py-1" href="/">
                        <img class="m-1" src="~/images/Logo.png" width="48px" height="48px" />
                    </a>

                    <div id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="/">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Books">View Books</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Profile">Hello xx</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Logout">Logout</a>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="d-flex align-items-center">
                    <ul class="navbar-nav d-flex justify-content-between">
                        <li class="nav-item pe-3">
                            <a href="#" class="btn btn-outline-secondary">Book Market</a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="btn btn-outline-secondary">Book Review</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <main role="main" class="flex-shrink-0">
            @RenderBody()
        </main>

        <footer class="container-fluid bg-secondary mt-auto">
            <div class="container d-flex flex-wrap justify-content-between align-items-center py-3 mt-auto">
                <p class="col-md-2 mb-0 fw-bold text-light">© 2023 Company, Inc</p>
                <ul class="nav col-md-8 justify-content-center">
                    <li class="nav-item text-body-secondary">
                        <a class="d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none text-light" href="/Admin">Admin Login</a>
                    </li>
                    <li class="nav-item text-body-secondary">
                        <a class="d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none text-light" href="/Members">Member Management</a>
                    </li>
                    <li class="nav-item px-4 text-body-secondary">
                        <a class="d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none text-light" href="/BooksInventory">Book Inventory</a>
                    </li>
                    <li class="nav-item text-body-secondary">
                        <a class="d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none text-light" href="/BookIssuing">Book Issuing</a>
                    </li>
                </ul>
                <ul class="nav col-md-2 justify-content-end">
                    <li class="nav-item">
                        <a href="#" target="_blank" class="p-0 nav-link text-body-secondary d-flex"><i class="fa-solid fa-house fs-5 btn btn-secondary"></i></a>
                    </li>
                    <li class="nav-item px-1">
                        <a href="https://github.com/axol26" target="_blank" class="p-0 nav-link text-body-secondary"><i class="fa-brands fa-github fs-5 btn btn-secondary"></i></a>
                    </li>
                    <li class="nav-item">
                        <a href="https://www.linkedin.com/in/leonard-amiel-nania/" target="_blank" class="p-0 nav-link text-body-secondary d-flex"><i class="fa-brands fa-linkedin fs-5 btn btn-secondary"></i></a>
                    </li>
                </ul>
            </div>
        </footer>
    </div>

    <!-- jQuery -->
    <script src="~/lib/jquery/jquery.min.js"></script>

    <!-- DataTables JS -->
    <script src="~/lib/datatables/jquery.dataTables.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="~/lib/bootstrap/bootstrap.bundle.min.js"></script>
</body>
</html>