@page
@model ViewBooksModel
@{
    ViewData["Title"] = "View Books";
}

<div class="container my-4">
    <div class="row">
        <div class="col-12">
            <div class="card bg-light">
                <div class="card-body">
                    <div class="row">
                        <div class="col text-center">
                            <h4>Book Inventory</h4>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <hr />
                        </div>
                    </div>
                    <div class="row">
                        <table class="table table-striped table-bordered" id="booksTable">
                            <thead>
                                <tr>
                                    <th>Book ID</th>
                                    <th>Book Information</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var book in Model.Books)
                                {
                                    <tr>
                                        <td>@book.BookId</td>
                                        <td>
                                            <div class="container-fluid">
                                                <div class="row">
                                                    <div class="col-lg-10">
                                                        <div class="row">
                                                            <div class="col-12">
                                                                <strong>@book.BookName</strong>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-12">
                                                                <b>Author</b> - @book.Author
                                                                &nbsp;| <b>Language</b> - @book.Language
                                                                &nbsp;| <b>Genre</b> - @book.Genre
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-12">
                                                                <b>Current Stock</b> - @book.CurrentStock
                                                                &nbsp;| <b>Issued Books</b> - @book.IssuedBooks
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-12">
                                                                <b>Description</b> - @book.Description
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-2 d-flex align-items-center justify-content-center">
                                                        <img class="img-fluid" src="@book.ImageUrl" alt="Book Image" />
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#booksTable").DataTable();
        });
    </script>
}
