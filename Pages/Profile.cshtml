@page
@model ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<div class="container-fluid my-4">
    <div class="row">
        <!-- Profile Form -->
        <div class="col-md-5">
            <div class="card bg-secondary-subtle">
                <div class="card-body">
                    <div class="row">
                        <div class="col text-center">
                            <i class="fa-regular fa-id-badge fa-beat" style="color: #0854d9; font-size: 90px;"></i>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col text-center">
                            <span class="badge text-bg-primary">Member</span>
                            <hr />
                        </div>
                    </div>
                    <form method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Full Name</label>
                                    <input class="form-control" type="text" asp-for="Profile.FullName" placeholder="Full Name" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Date of Birth</label>
                                    <input class="form-control" type="date" asp-for="Profile.DateOfBirth" placeholder="Date of Birth" />
                                </div>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="form-label">Contact Number</label>
                                    <input class="form-control" type="tel" asp-for="Profile.ContactNumber" placeholder="Contact Number" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="form-label">Email ID</label>
                                    <input class="form-control" type="email" asp-for="Profile.Email" placeholder="Email ID" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="form-label">Country</label>
                                    <select class="form-control" asp-for="Profile.Country">
                                        <option value="">Select</option>
                                        <option value="Brunei">Brunei</option>
                                        <option value="Cambodia">Cambodia</option>
                                        <option value="Indonesia">Indonesia</option>
                                        <option value="Laos">Laos</option>
                                        <option value="Malaysia">Malaysia</option>
                                        <option value="Myanmar">Myanmar</option>
                                        <option value="Philippines">Philippines</option>
                                        <option value="Singapore">Singapore</option>
                                        <option value="Thailand">Thailand</option>
                                        <option value="Vietnam">Vietnam</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Member ID</label>
                                    <input class="form-control" type="text" asp-for="Profile.MemberId" placeholder="User ID" readonly />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Password</label>
                                    <input class="form-control" type="password" asp-for="Profile.Password" placeholder="Password" />
                                </div>
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="d-flex justify-content-center gap-4">
                                <div class="d-grid col-5">
                                    <button type="submit" class="btn btn-warning btn-lg" asp-page-handler="Update">Update Account</button>
                                </div>
                                <div class="d-grid col-5">
                                    <button type="submit" class="btn btn-danger btn-lg" asp-page-handler="Delete">Delete Account</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Issued Books -->
        <div class="col-md-7">
            <div class="card bg-light">
                <div class="card-body">
                    <div class="row">
                        <div class="col text-center">
                            <i class="fa-solid fa-book-open fa-beat" style="color: #0854d9; font-size: 90px;"></i>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col text-center">
                            <h4>Your Issued Books</h4>
                            <hr />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <table class="table table-striped table-bordered" id="booksTable">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Book Name</th>
                                        <th>Issued Date</th>
                                        <th>Due Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var book in Model.IssuedBooks)
                                    {
                                        <tr>
                                            <td>@book.BookId</td>
                                            <td>@book.BookName</td>
                                            <td>@book.IssueDate.ToShortDateString()</td>
                                            <td>@book.DueDate.ToShortDateString()</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#booksTable").DataTable();
        });
    </script>
}
