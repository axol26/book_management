@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container my-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card bg-secondary-subtle">
                <div class="card-body">
                    <div class="row mb-2">
                        <div class="col">
                            <center>
                                <i class="fa-solid fa-user fa-beat" style="color: #0854d9; font-size: 90px;"></i>
                            </center>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <center>
                                <h3>Member Login</h3>
                                <hr />
                            </center>
                        </div>
                    </div>
                    
                    <form method="post">
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="MemberId" class="form-label">Member ID</label>
                                    <input asp-for="MemberId" class="form-control" placeholder="Member ID" />
                                    <span asp-validation-for="MemberId" class="text-danger"></span>
                                </div>
                                <div class="form-group mt-2">
                                    <label asp-for="Password" class="form-label">Password</label>
                                    <input asp-for="Password" class="form-control" placeholder="Password" type="password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                
                                <div class="d-flex gap-5 justify-content-center mt-4">
                                    <div class="d-grid col-4">
                                        <button type="submit" class="btn btn-primary btn-lg" asp-page-handler="Login">Login</button>
                                    </div>
                                    <div class="d-grid col-4">
                                        <a asp-page="/SignUp" class="btn btn-success btn-lg">Sign Up</a>
                                    </div>
                                </div> 
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <asp-validation-summary="All" class="text-danger">User login was incorrect.</asp-validation-summary>
    </div>
}

<div class="container my-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card bg-secondary-subtle">
                <div class="card-body">
                    <!-- ... existing login form ... -->
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-8 mx-auto">
            <h3>Member Information</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Member ID</th>
                        <th>Password</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var member in Model.Members)
                    {
                        <tr>
                            <td>@member.MemberId</td>
                            <td>@member.Password</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>